@model MassFacultyUpdateNew.Models.User
@{ 
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<style>
    body {
        background-image: url("https://www.cud.ac.ae/sites/default/files/primary-hero-image-or-video/landing/2020/sec/web-concept---Day.jpg");
    }
</style>
<div class="lginbg">
    <div class="card p-4">        
        <img class="card-img-top rounded-circle custom_rounded" src="~/Images/red-logo-maple-date.jpg" alt="Card image cap">
        
        <div class="card-body">
            <h5 class="card-title text-center">Welcome</h5>
            <p class="card-text text-center small font-weight-bold">Login using your system credentials.</p>
            <form asp-controller="Account" asp-action="Login" method="post" id="Signup">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label font-weight-bold">User Name</label>
                    <input type="email" asp-for="EmailID" class="form-control" required />
                </div>
                <div class="form-group pb-3">
                    <label class="control-label font-weight-bold">Password</label>
                    <input type="password" asp-for="Password" class="form-control" required />
                </div>
                <div>
                    <button type="submit" class="btn btn-danger btn-block">Login</button>
                </div>
            </form>
        </div>
    </div>

</div>

